<main class="main-content-area">
  <div class="perfil-container" style="max-width:440px; margin:40px auto 0 auto; background:#fff; border-radius:18px; box-shadow:0 4px 24px rgba(42,63,102,0.13); padding:40px 36px 28px 36px; border:2.5px solid #3b5998;">
    <h2 style="color:#3b5998; margin-bottom:22px; text-align:center;">Editar Perfil</h2>
    <form action="/perfil/editar" method="POST">
      <div class="input-group">
        <label for="username"><b>Usuario:</b></label>
        <input id="username" name="username" type="text" value="{{usuario.username}}" required>
      </div>
      <div class="input-group">
        <label for="email"><b>Email:</b></label>
        <input id="email" name="email" type="email" value="{{usuario.email}}" required>
      </div>
      <div class="input-group">
        <label for="old_password"><b>Contraseña actual:</b></label>
        <input id="old_password" name="old_password" type="password" placeholder="Ingresa tu contraseña actual" required>
      </div>
      <div class="input-group">
        <label for="password"><b>Nueva Contraseña:</b></label>
        <input id="password" name="password" type="password" placeholder="Dejar en blanco para no cambiar">
      </div>
      <div class="botones-editar">
        <button type="submit" class="btn-editar">Guardar Cambios</button>
        <a href="/perfil" class="btn-logout">Cancelar</a>
      </div>
    </form>
  </div>
</main>
<style>
  .perfil-container {
    animation: fadeInPerfil 0.3s;
    background: #fff;
    border: 2.5px solid #3b5998;
    border-radius: 18px;
    box-shadow: 0 4px 24px rgba(42,63,102,0.13);
  }
  .input-group {
    margin-bottom: 18px;
    display: flex;
    flex-direction: column;
  }
  .input-group label {
    color: #3b5998;
    font-weight: 600;
    margin-bottom: 6px;
  }
  .input-group input {
    padding: 10px 14px;
    border-radius: 7px;
    border: 1.5px solid #6a89cc;
    font-size: 1.08em;
    color: #3b5998;
    background: #f7f9fc;
    transition: border 0.18s;
  }
  .input-group input:focus {
    border-color: #3b5998;
    outline: none;
    background: #eaf0fa;
  }
  .botones-editar {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-top: 18px;
  }
  .btn-editar, .btn-logout {
    display: inline-block;
    padding: 10px 0;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.07em;
    min-width: 160px;
    text-align: center;
    transition: background 0.18s, color 0.18s;
    box-sizing: border-box;
    border: none;
    cursor: pointer;
  }
  .btn-editar { background: #3b5998; color: #fff; }
  .btn-editar:hover { background: #6a89cc; }
  .btn-logout { background: #eaf0fa; color: #3b5998; border: 1.5px solid #3b5998; }
  .btn-logout:hover { background: #3b5998; color: #fff; }
  @keyframes fadeInPerfil {
    from { opacity: 0; transform: translateY(30px);}
    to { opacity: 1; transform: translateY(0);}
  }
</style>